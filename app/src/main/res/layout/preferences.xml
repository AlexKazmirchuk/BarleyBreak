<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="2%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="100%"
        android:background="@drawable/second_background">
        <TextView
            android:id="@+id/settingTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/setting_title_text"
            android:textStyle="bold"
            android:textSize="@dimen/setting_title_text_size"
            android:textColor="@color/preferences_text_color"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:layout_marginTopPercent="8%"
            app:layout_marginBottomPercent="6%"
            app:layout_marginLeftPercent="7%"
            app:layout_marginRightPercent="7%"
            app:layout_heightPercent="18%"
            app:layout_widthPercent="100%"
            android:background="@drawable/setting_title_back"/>
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/btnSettingWrapper"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/settingTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:layout_marginTopPercent="0%"
            app:layout_marginBottomPercent="11%"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="100%"
            android:background="@drawable/setting_container_back">
            <Button
                android:id="@+id/diffBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/diff_btn_default_text"
                android:textStyle="bold"
                android:textSize="@dimen/first_btn_text_size"
                android:textColor="@color/preferences_text_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:layout_marginTopPercent="4%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="4%"
                app:layout_marginRightPercent="4%"
                app:layout_heightPercent="21%"
                app:layout_widthPercent="100%"
                android:background="@drawable/setting_item1_selector"/>
            <Button
                android:id="@+id/soundSwitcherBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/sound_switcher_default_text"
                android:textStyle="bold"
                android:textSize="@dimen/all_btn_text_size"
                android:textColor="@color/preferences_text_color"
                android:layout_below="@id/diffBtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:layout_marginTopPercent="3%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="4%"
                app:layout_marginRightPercent="4%"
                app:layout_heightPercent="21%"
                app:layout_widthPercent="100%"
                android:background="@drawable/setting_item2_selector"/>
            <Button
                android:id="@+id/clearStatsBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/clear_stats_btn_text"
                android:textStyle="bold"
                android:textSize="@dimen/all_btn_text_size"
                android:textColor="@color/preferences_text_color"
                android:layout_below="@id/soundSwitcherBtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:layout_marginTopPercent="3%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="4%"
                app:layout_marginRightPercent="4%"
                app:layout_heightPercent="21%"
                app:layout_widthPercent="100%"
                android:background="@drawable/setting_item3_selector"/>
            <Button
                android:id="@+id/aboutBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:text="@string/about_btn_text"
                android:textSize="@dimen/all_btn_text_size"
                android:textColor="@color/preferences_text_color"
                android:layout_below="@id/clearStatsBtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:layout_marginTopPercent="3%"
                app:layout_marginBottomPercent="4%"
                app:layout_marginLeftPercent="4%"
                app:layout_marginRightPercent="4%"
                app:layout_heightPercent="21%"
                app:layout_widthPercent="100%"
                android:background="@drawable/setting_item4_selector"/>
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>