<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/background">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/second_background"
            android:layout_margin="@dimen/second_back_margin">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Settings"
                android:layout_weight="285"
                android:textStyle="bold"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/settingTitle"
                android:textSize="@dimen/setting_title_text_size"
                android:background="@drawable/setting_title_back"
                android:textColor="@color/preferences_text_color"
                android:layout_marginLeft="@dimen/title_margin_left"
                android:layout_marginRight="@dimen/title_margin_right"
                android:layout_marginTop="@dimen/title_margin_top"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_weight="100"
                android:layout_height="fill_parent"
                android:background="@drawable/setting_container_back"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:layout_marginRight="@dimen/list_margin_right"
                android:layout_marginBottom="@dimen/list_margin_bottom"
                android:layout_marginTop="@dimen/list_margin_top">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="95"
                    android:text="Difficulty: medium"
                    android:textStyle="bold"
                    android:textSize="@dimen/first_btn_text_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/diffBtn"
                    android:textColor="@color/preferences_text_color"
                    android:background="@drawable/setting_item1_selector"
                    android:layout_margin="@dimen/first_btn_margin"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="100"
                    android:text="Sound: on"
                    android:textStyle="bold"
                    android:textSize="@dimen/all_btn_text_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/soundSwitherBtn"
                    android:textColor="@color/preferences_text_color"
                    android:background="@drawable/setting_item2_selector"
                    android:layout_marginLeft="@dimen/all_margins_for_btn"
                    android:layout_marginRight="@dimen/all_margins_for_btn"
                    android:layout_marginBottom="@dimen/all_margins_for_btn"
                    android:typeface="normal"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="100"
                    android:text="Clear statistic"
                    android:textStyle="bold"
                    android:textSize="@dimen/all_btn_text_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/clearStatsBtn"
                    android:textColor="@color/preferences_text_color"
                    android:background="@drawable/setting_item3_selector"
                    android:layout_marginLeft="@dimen/all_margins_for_btn"
                    android:layout_marginRight="@dimen/all_margins_for_btn"
                    android:layout_marginBottom="@dimen/all_margins_for_btn"
                    android:typeface="normal"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="100"
                    android:textStyle="bold"
                    android:text="About"
                    android:textSize="@dimen/all_btn_text_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/aboutBtn"
                    android:textColor="@color/preferences_text_color"
                    android:background="@drawable/setting_item4_selector"
                    android:layout_marginLeft="@dimen/all_margins_for_btn"
                    android:layout_marginRight="@dimen/all_margins_for_btn"
                    android:layout_marginBottom="@dimen/all_margins_for_btn"
                    android:typeface="normal"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>