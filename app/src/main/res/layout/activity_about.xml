<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="2%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="100%"
        android:background="@drawable/second_background">
        <TextView
            android:id="@+id/aboutAppTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/about_app_title"
            android:textStyle="bold"
            android:textSize="@dimen/setting_title_text_size"
            android:textColor="@color/preferences_text_color"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:layout_marginTopPercent="8%"
            app:layout_marginBottomPercent="6%"
            app:layout_marginLeftPercent="7%"
            app:layout_marginRightPercent="7%"
            app:layout_heightPercent="18%"
            app:layout_widthPercent="100%"
            android:background="@drawable/setting_title_back"/>
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/aboutInfoWrapper"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/aboutAppTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:layout_marginTopPercent="0%"
            app:layout_marginBottomPercent="11%"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="100%"
            android:background="@drawable/setting_container_back">
            <TextView
                android:id="@+id/txtVersion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/version"
                android:textStyle="bold"
                android:textSize="@dimen/first_btn_text_size"
                android:textColor="@color/preferences_text_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:layout_heightPercent="20%"
                app:layout_widthPercent="100%"/>
            <TextView
                android:id="@+id/txtAuthor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/author"
                android:textStyle="bold"
                android:textSize="@dimen/first_btn_text_size"
                android:textColor="@color/preferences_text_color"
                android:layout_below="@id/txtVersion"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:layout_heightPercent="20%"
                app:layout_widthPercent="100%"/>
            <TextView
            android:id="@+id/txtLink"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColorLink="#004cbe"
            android:textStyle="bold"
            android:textSize="@dimen/first_btn_text_size"
            android:textColor="@color/preferences_text_color"
            android:layout_below="@id/txtAuthor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="100%"/>
            <TextView
                android:id="@+id/txtLicense"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_horizontal|top"
                android:text="@string/license"
                android:textColorLink="#004cbe"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/preferences_text_color"
                android:layout_below="@id/txtLink"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:layout_heightPercent="20%"
                app:layout_widthPercent="100%"/>

        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>